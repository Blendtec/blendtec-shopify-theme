    font-weight: 900;
    font-style: italic;
    color: #f41d2f;
  }
  .section5-learn-more{
    color: #f41d2f;
    font-size: 18px;
    font-style: italic;
    text-decoration: none;
    font-weight: 900;
  }
  .review-text{
    color:black;
    font-weight:600;
    line-height:1.25;
  }
    .section5-learn-more{
    color: #f41d2f;
    font-size:18px;
    font-style:italic;
    text-decoration:none;
    font-weight:900;
  }
  .section5-small-description{
      margin-top: 25px;
      color: #3d3f4b;
      font-size: 14px;
  }
  .section5-recipe-title{
    color: #3d3f4b;
    font-size: 32px;
    line-height: 1;
    margin-top: 8px;
  }
  .section5-recipe-text{
      color: #3d3f4b;
      line-height: 1.2;
  }
  .section5-recipe-container{
    height:100%;
    border: solid 1px #979797;
    margin:3px;
    background-color: #979797;
  }
  .section5-recipe-container:hover {
-webkit-box-shadow: 2px 2px 5px 0px rgba(0,0,0,0.75);
-moz-box-shadow: 2px 2px 5px 0px rgba(0,0,0,0.75);
box-shadow: 2px 2px 5px 0px rgba(0,0,0,0.75);

  }
  .section5-background{
    background-size: cover;
  }
  .section5-red-hr{
    border-color: #f41d2f;
    width: 120px;
    margin: 0 auto;
    padding: 10px;
  }
@media screen and (max-width: {{section.settings.block_width | minus: 1}}px) {
  .section5-recipe-container{
    margin: 0px;
  }
.text-wrapper-featured-blog{
  float:left;
  padding:3px;
}
.featured-blog-block{
  width:{{section.settings.block_width | divided_by: 2}}px;
  height:{{section.settings.block_height | times: 2}}px;
}
  .blocks-wrapper{
    max-width:{{ section.settings.block_width | divided_by: 2 }}px;
  }
}
</style>

