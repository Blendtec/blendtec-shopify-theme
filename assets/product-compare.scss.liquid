.compare-blender {
.product-comparison--bg-image{
    background-position: 0 50%;
    background-size: cover;
    display: inline-block;
    width: 100%;
}
.product-comparison--header-container {
    padding: 100px 0 120px;
}
.product-comparison--sub-leader {
    font-size: 28px;
    font-size: 2rem;
    color: #fff;
    text-align: center;
    text-transform: uppercase;
}
.product-comparison--leader {
    font-size: 56px;
    font-size: 4rem;
    color: #fff;
    text-align: center;
    text-transform: uppercase;
}
  #thePopup{
    width:60%;
    left: 20%;
  }

@media screen  and (max-width: 840px) /* Tablet */ {
  #thePopup{
    width:80%;
    left: 10%;
  }

}

@media screen and (max-width: 700px) /* Mobile */ {
  #thePopup{
    width:94%;
    left: 3%;
  }

}
#circle{
  fill: #ED1B2C;
}
#exitButton:hover #circle{
  opacity:.5;
}
#thePopup{
    background-color: white;
    height:80%;
    z-index: 101;
    top: 100px;
    position: fixed;
    overflow:scroll;
}
#popupBackground{
    background-color: black;
    opacity: .1;
    height: 100%;
    width: 100%;
    position: fixed;
    top: 0px;
    left: 0px;
    z-index: 100;
}
  .cell{
    padding-left: 5px;
  }
  .product-borders{
    border-top-style:solid;
    border-top-color:#d6d5d5;
    border-top-width:1px;
    border-left-style:solid;
    border-left-color:#d6d5d5;
    border-left-width:1px;
  }
  .bg-gray{
    background-color: #f5f5f5;
  }
  .product-comparison_cell{
    height:30px;
  }
  .product-title{
    font-size:25px;
    font-weight:900;
  }
  .product-title-secondary{
    font-size:18px;
  }
  .color-square{
    height:15px;
    width:15px;
    border-color:grey;
    border-width:1px;
    border-style:solid;
    display:inline-block;
  }
  .list-colors{
    cursor:pointer;
    list-style:none;
  }
  .color-square:hover{
    -webkit-box-shadow: inset 1px 1px 5px 0px rgba(0,0,0,0.75);
    -moz-box-shadow: inset 1px 1px 5px 0px rgba(0,0,0,0.75);
    box-shadow: inset 1px 1px 5px 0px rgba(0,0,0,0.75);
  }
  .panel-image{
    max-height:60%;
    display:block;
    margin: 0 auto;
  }
  .bold-titles{
    font-weight:900;
  }
  .zoom:hover{
    color:#ED1B2C;
    cursor:pointer;
  }
  .zoom{
    font-weight:900;
  }
}