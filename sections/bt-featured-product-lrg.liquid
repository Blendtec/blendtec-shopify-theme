<div class="section-background javascript-load-image"
        numBlocks="{{section.blocks.size}}"
        typeImage="backgroundimagesrc"
        tieTextClass="show-block-"
        {% for i in section.blocks %}

          {% assign placement = forloop.index  %}

            {% for y in (8..12) %}
              {% assign imageSize = y | times: 100 | downcase | append: 'x'  %}
              {{placement}}backgroundimagesrc{{ y | times: 100 }}="{{i.settings.blender_background_image | img_url: imageSize }}"

            {% endfor %}

        {% endfor %}
>
<div class="">
    <div class="grid" style="padding-top:130px;">
  <div class="grid__item large--one-sixth medium--one-sixth small--one-sixth" style=""></div>
  <div class="small-left-padding grid__item large--one-half">
    {% for i in section.blocks %}
      <div class="show-block-{{forloop.index}}" style="display:none;">
        <h4 style="" class="h4-subhead">{{i.settings.h4_subhead}}</h4>
        <h3 class="h3-subhead">{{i.settings.h3_headline}}</h3>
        <h3 class="h3-subhead">{{i.settings.descriptive_title_top}}</h3>
        </div>
        {% endfor %}
     </div>
    {% for i in section.blocks %}
      <div class="show-block-{{forloop.index}}" style="display:none;">
  <div class="small-left-padding grid__item large--one-third medium--one-half">
    <a href="{{i.settings.section3_top_button_link}}" class="button-hero">{{i.settings.section3_top_button}}</a>
     </div>
     </div>
     {% endfor %}
     </div>
  </div>
  <div class="gradient-black-background"></div>
<div class="bt-third">

<div class="black-background">
<div class="section3-text-container">
     <div style="padding-top:150px;" class="grid blender-text-descriptor-wrapper">
     <div class="grid__item large--one-twelfth medium--one-twelfth small--one-twelfth"></div>
    <div class="grid__item large--one-sixth medium--one-third small--two-thirds">
    {% for i in section.blocks %}
      <div class="show-block-{{forloop.index}}" style="display:none;">
      <h4 style="" class="blender-text-descriptor-title">{{i.settings.info_topleft_title}}</h4>
      <hr class="red-hr">
      <div class="jar-description">{{i.settings.info_topleft_text}}</div>
      </div>
      {% endfor %}
    </div>
     </div>
     <div style="margin-top:25px;" class="grid blender-text-descriptor-wrapper">
    <div class="grid__item large--nine-twelfths medium--two-thirds small--one-third"></div>
    <div class="grid__item large--one-sixth medium--one-third small--two-thirds">
    {% for i in section.blocks %}
      <div class="show-block-{{forloop.index}}" style="display:none;">
      <h4 style="" class="blender-text-descriptor-title">{{i.settings.info_topright_title}}</h4>
      <hr class="red-hr">
      <div class="jar-description">{{i.settings.info_topright_text}}</div>
      </div>
      {% endfor %}
    </div>
     </div>
     <div style="margin-top:25px;" class="grid blender-text-descriptor-wrapper">
     <div class="grid__item large--one-twelfth medium--one-twelfth small--one-twelfth"></div>
    <div class="grid__item large--one-sixth medium--one-third small--two-thirds">
    {% for i in section.blocks %}
      <div class="show-block-{{forloop.index}}" style="display:none;">
      <h4 style="" class="blender-text-descriptor-title">{{i.settings.info_midleft_title}}</h4>
      <hr class="red-hr">
      <div class="jar-description">{{i.settings.info_midleft_text}}</div>
      </div>
      {% endfor %}
    </div>
     </div>
     <div class="grid blender-image-container">

      <div class="grid__item background-blotch">
        <img class="blender-image javascript-load-image"
        numBlocks="{{section.blocks.size}}"
        typeImage="imagebasesrc"
        {% for i in section.blocks %}

          {% assign placement = forloop.index  %}

            {% for y in (3..8) %}
              {% assign imageSize = y | times: 100 | downcase | append: 'x'  %}
              {{placement}}imagebasesrc{{ y | times: 100 }}="{{i.settings.blender_image | img_url: imageSize }}"

            {% endfor %}

        {% endfor %}>


      </div>
     </div>
     <div style="margin-top:25px;" class="grid blender-text-descriptor-wrapper">
     <div class="grid__item large--nine-twelfths medium--two-thirds small--one-third"></div>
    <div class="grid__item large--one-sixth medium--one-third small--two-thirds">
    {% for i in section.blocks %}
      <div class="show-block-{{forloop.index}}" style="display:none;">
      <h4 style="" class="blender-text-descriptor-title">{{i.settings.info_bottomright_title}}</h4>
      <hr class="red-hr">
      <div class="jar-description">{{i.settings.info_bottomright_text}}</div>
      </div>
      {% endfor %}
    </div>
     </div>
     <div style="margin-top:25px;padding-bottom:50px;" class="grid blender-text-descriptor-wrapper">
     <div class="grid__item large--one-twelfth medium--one-twelfth small--one-twelfth"></div>
    <div class="grid__item large--one-sixth medium--one-third small--two-thirds">
    {% for i in section.blocks %}
      <div class="show-block-{{forloop.index}}" style="display:none;">
      <h4 style="" class="blender-text-descriptor-title">{{i.settings.info_bottomleft_title}}</h4>
      <hr class="red-hr">
      <div class="jar-description">{{i.settings.info_bottomleft_text}}</div>
      </div>
      {% endfor %}
    </div>
     </div>
</div>
</div>

</div>
</div>
  <style>
  .bt-featured-product-lrg {
    background-color:transparent !important;
    margin-top:-5.1%;
  }
  .black-background{
      width: 100%;
      position:relative;
      z-index:0;
  }
  .section3-text-container{
      z-index: 10;
      position: relative;
  }
  .red-hr{
    border-color:#f41d2f;
    margin:5px 0px 5px 0px;
    width:50px;
  }
  .jar-description{
    opacity: 0.7;
    color:white;
    font-size:18px;
    line-height:1;
  }
  .blender-text-descriptor-title{
    color:white;
    margin-bottom:0px;
    font-size:26px;
  }
  .blender-image-container{
      position: absolute;
      top: 50px;
      width: 100%;
      z-index: 1;
  }
  .blender-text-descriptor-wrapper{
    z-index:2;
    position:relative;
  }
  .blender-image{
    width: 99%;
      max-width: 613px !important;
      margin: 0 auto;
      display: block;
  }
  .bt-third{
      background-size: cover;
      background-repeat: no-repeat;
  }

  .button-hero{
      background-color: #f41d2f;
      padding: 5px 10px 5px 10px;
      color: white;
      font-size: 14px;
      font-weight: 900;
      border-radius: 0;
      line-height: 1.6;
      display: inline-block;
  }

  .wavy-background{
      height:349px;
      position:relative;
      z-index:1;
  }

  .h4-subhead{
    color:#646674;
    font-size:26px;
  }
  .h3-subhead{
    color: white;
      font-size: 40px;
      line-height: 1;
      margin-top:-15px;
  }

  .section-background {
    background-size:cover;
    background-repeat:no-repeat;
  }

  @media screen and (max-width: 848px) {

      .small-left-padding{
          padding-left:45px;
      }
      .blender-image-container{
        position:static;
      }
  }

    .gradient-black-background{
      width: 100%;
      height: {{section.settings.black_background_height}}px;
      margin-top: -{{section.settings.black_background_height}}px;;
    }





</style>

