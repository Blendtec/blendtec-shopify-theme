<!-- /templates/page.find-a-store.liquid -->

<div class="grid--full text-max-width">
    <div class="findstore--header"></div>
    <div>
        <div class="text-center content-wrapper--horizontal section-header">
            <div class="display-table-cell">
                <h1>{{ page.title }}</h1>
                {% include 'breadcrumb' %}
            </div>
        </div>
    </div>
    <hr class='hr--center'>
    {% if page.content != blank %}
    <div>
        <div class="rte">
            {{ page.content }}
        </div>
    </div>
    <hr class="hr--center">
    {% endif %}
    <div id="wtbContainer">
        <script type="text/javascript">
			pswtb.loader.show({
				container: document.getElementById("wtbContainer"),
				widgetConfigurationId: '{{ settings.pricespider_main_widget_id }}',
				productGroup: 'US'
			});
        </script>
    </div>
</div>

