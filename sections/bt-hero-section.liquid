<script type="text/javascript">

	function stylingByHeight(idToLimit, upperLimit, lowerLimit, limitedArray) {
		var upperLimitNum = 0;
		if (typeof upperLimit === 'string' && document.getElementById(upperLimit)) {
			upperLimitNum = document.getElementById(upperLimit).offsetHeight;
		} else if(typeof upperLimit === 'number'){
			upperLimitNum = upperLimit;
		}
		var lowerLimitNum = 0;
		if (typeof lowerLimit === 'string' && document.getElementById(lowerLimit)) {
			lowerLimitNum = document.getElementById(lowerLimit).offsetHeight;
		} else if(typeof lowerLimit === 'number'){
			lowerLimitNum = lowerLimit;
		}

		document.getElementById(idToLimit).style.height = null;
		if (limitedArray['upper']) {
			for (var key in limitedArray['upper']) {
				document.getElementById(idToLimit).style[key] = null;
			}
		}
		if (limitedArray['lower']) {
			for (var key in limitedArray['lower']) {
				document.getElementById(idToLimit).style[key] = null;
			}
		}
		var currHeight = document.getElementById(idToLimit).offsetHeight;

		if (currHeight >= upperLimitNum) {
			document.getElementById(idToLimit).style.height = upperLimitNum + "px";
			if (limitedArray['lower']) {
				for (var key in limitedArray['lower']) {
					document.getElementById(idToLimit).style[key] = null;
				}
			}
			if (limitedArray['upper']) {
				for (var key in limitedArray['upper']) {
					document.getElementById(idToLimit).style[key] = limitedArray['upper'][key];
				}
			}
		} else if (currHeight <= lowerLimitNum) {
			document.getElementById(idToLimit).style.height = lowerLimitNum + "px";
			if (limitedArray['upper']) {
				for (var key in limitedArray['upper']) {
					document.getElementById(idToLimit).style[key] = null;
				}
			}
			if (limitedArray['lower']) {
				for (var key in limitedArray['lower']) {
					document.getElementById(idToLimit).style[key] = limitedArray['lower'][key];
				}
			}
		}
	}


window.onresize = function () {
	stylingByHeight('hero-image', 'hero-image-wrapper', 100, {'upper':{'paddingBottom':'0px'}, 'lower':{'paddingBottom':'0px'}});
};



window.onload = function () {
	stylingByHeight('hero-image', 'hero-image-wrapper', 100, {'upper':{'paddingBottom':'0px'}, 'lower':{'paddingBottom':'0px'}});
}

                                              </script>


