{
    "extends": [
      "plugin:shopify/esnext",
      "plugin:shopify/jquery"
    ],
    "env": {
      "jest": true
    },
    "rules": {
      "babel/no-invalid-this": 0,
      "import/no-anonymous-default-export": 0,
      "import/no-unresolved": ["error", {"ignore": ["^jquery"]}],
      "no-alert": 0,
      "no-console": 0,
      "no-new": 0,
      "node/shebang": 0,
      "no-var": 0,
      "object-shorthand": 0,
      "indent": [2, 2,
        {"SwitchCase": 2}
      ],
      "prefer-arrow-callback": 0,
      "space-before-function-paren": [
        "error",
        "always"
      ]
    },
    "globals": {
      "document": true,
      "window": true,
      "Shopify": true,
      "theme": true,
      "_": true,
    }
  }
  