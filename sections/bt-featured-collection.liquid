<div class="bt-featured-collection">

    <div class="grid" style="padding-top:25%;padding-bottom:2%; ">
        <hr>
    </div>
    <div class="blenders-bottom-background bottom-blenders-wrapper javascript-load-image"
         backgroundimagesrc300="{{ section.settings.background_image2 | img_url: '300x' }}">
        <div class="grid " style="padding-bottom:50px;">
            <div class="grid__item large--one-third medium--one-third bottom-blender">
                <div>
                {% for i in section.blocks %}
                  <div class="show-block-{{forloop.index}}" style="display:none;">
                    <h4 class="heavy">{{ i.settings.blender1_title }}</h4>
                    </div>
                    {% endfor %}
                    <div class="br-gradient-grey"></div>
                    <div class="grid">
                        <div class="grid__item large--one-half description-text">
                        {% for i in section.blocks %}
                          <div class="show-block-{{forloop.index}}" style="display:none;">
                            <div>
                                {{ i.settings.blender1_text }}
                            </div>
                            </div>
                        {% endfor %}
                        {% for i in section.blocks %}
                         <div class="show-block-{{forloop.index}}" style="display:none;">
                            <a href="{{ i.settings.blender1_link }}" class="btn btn--small">SHOP</a>
                            </div>
                        {% endfor %}
                        </div>
                        <div class="grid__item large--one-half">
                            <img class=" javascript-load-image" style="width:100%"
                            numBlocks="{{section.blocks.size}}"
                            typeImage="imagebasesrc"
                            {% for i in section.blocks %}
                                {% for y in (3..12) %}
                                    {% assign imageSize = y | times: 50 | downcase | append: 'x' %}
                                    {{placement}}imagebasesrc{{ y | times: 50 }}="{{ i.settings.bottom_blender1 | img_url: imageSize }}"
                                {% endfor %}
                            {% endfor %}
                            >
                        </div>
                    </div>
                </div>
            </div>
            <div class="grid__item large--one-third medium--one-third bottom-blender">

                {% for i in section.blocks %}
                  <div class="show-block-{{forloop.index}}" style="display:none;">
                    <h4 class="heavy">{{ i.settings.blender2_title }}</h4>
                    </div>
                    {% endfor %}
                <div class="br-gradient-silver"></div>
                <div class="grid">
                    <div class="grid__item large--one-half description-text">
                        {% for i in section.blocks %}
                          <div class="show-block-{{forloop.index}}" style="display:none;">
                            <div>
                                {{ i.settings.blender2_text }}
                            </div>
                            </div>
                        {% endfor %}
                        {% for i in section.blocks %}
                         <div class="show-block-{{forloop.index}}" style="display:none;">
                            <a href="{{ i.settings.blender2_link }}" class="btn btn--small">SHOP</a>
                            </div>
                        {% endfor %}
                    </div>
                    <div class="grid__item large--one-half">
                        <img class=" javascript-load-image" style="width:100%"
                            numBlocks="{{section.blocks.size}}"
                            typeImage="imagebasesrc"
                            {% for i in section.blocks %}
                                {% for y in (3..12) %}
                                    {% assign imageSize = y | times: 50 | downcase | append: 'x' %}
                                    {{placement}}imagebasesrc{{ y | times: 50 }}="{{ i.settings.bottom_blender2 | img_url: imageSize }}"
                                {% endfor %}
                            {% endfor %}
                        >
                    </div>
                </div>
            </div>
            <div class="grid__item large--one-third medium--one-third bottom-blender">

                {% for i in section.blocks %}
                  <div class="show-block-{{forloop.index}}" style="display:none;">
                    <h4 class="heavy">{{ i.settings.blender3_title }}</h4>
                    </div>
                    {% endfor %}
                <div class="br-gradient-gold"></div>
                <div class="grid">
                    <div class="grid__item large--one-half description-text">
                        {% for i in section.blocks %}
                          <div class="show-block-{{forloop.index}}" style="display:none;">
                            <div>
                                {{ i.settings.blender3_text }}
                            </div>
                            </div>
                        {% endfor %}
                        {% for i in section.blocks %}
                        <div class="show-block-{{forloop.index}}" style="display:none;">
                            <a href="{{ i.settings.blender3_link }}" class="btn btn--small ">SHOP</a>
                            </div>
                        {% endfor %}
                    </div>
                    <div class="grid__item large--one-half">
                        <img class=" javascript-load-image" style="width:100%"
                            numBlocks="{{section.blocks.size}}"
                            typeImage="imagebasesrc"
                            {% for i in section.blocks %}
                                {% for y in (3..12) %}
                                    {% assign imageSize = y | times: 50 | downcase | append: 'x' %}
                                    {{placement}}imagebasesrc{{ y | times: 50 }}="{{ i.settings.bottom_blender3 | img_url: imageSize }}"
                                {% endfor %}
                            {% endfor %}
                        >
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

