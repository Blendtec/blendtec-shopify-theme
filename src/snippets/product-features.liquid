{% assign alignmentCounter = 0 %}
<div class="grid">
  <div class="grid__item large--one-half medium--one-half">
    <h4>{{ 'products.product.features' | t | upcase }}</h4>
    <hr class="accent">
    <ul>
    <li>
  	{{ product.metafields["global"]["Features-Include"] | replace: ",", "</li><li>" | replace: "|", "," }}
    </li>
  </ul>
  </div>
  {% if product.metafields['global']['Features-Include-Image'] %}
  <div class="grid__item large--one-half medium--one-half">
  	<img style="width:100%" src="{{ settings['metafield_buckets'] }}{{ product.metafields['global']['Features-Include-Image'] | remove: settings['metafield_buckets_src'] }}">
  </div>
  {% endif %}
</div>
{% include 'features-sub' with title: product.metafields['global']['Features-Sub1-title'], image: product.metafields['global']['Features-Sub1-image'], text: product.metafields["global"]["Features-Sub1-text"]   %}
